# Token Discord Bot
DISCORD_TOKEN=
# Client ID Discord Bot
CLIENT_ID=
# Optional: speed up slash command deploys by targeting a single guild
GUILD_ID=your_guild_id
# Optional: base vote URL when no entry is selected (used for legacy config)
DEFAULT_VOTE_URL=
# Default timezone for reminder windows
DEFAULT_TZ=Europe/Paris
# Public URL where the bot can redirect players (required for 1-click voting)
# Example: https://vote-bot.example.com
PUBLIC_BASE_URL=
# Secret used to sign redirect tokens (set to a strong random string)
MARK_SECRET=
# HTTP server port for the /v redirect endpoint
PORT=3000
# Language of the bot responses: fr or en
BOT_LANG=fr
